<div class="form-group row">
    <label class="param-property text-nowrap col-lg-3 col-xl-2 text-lg-right col-form-label">
        {{name}}:</br>
        <small class="text-muted"><em>({{this.in}})</em></small>
    </label>
    <div class="param-property col-lg-9 col-xl-10" data-label="{{name}}">
        {{#if isBody}}
            {{#if isFile}}
                <label class="btn btn-secondary btn-sm required" for="my-file-selector">
                    <input type="file" style="display:none;" name="{{name}}">
                    Choose file
                </label>
            {{else}}
                {{#if default}}
                    <div class="editor_holder"></div>
                    <textarea class="body-textarea form-control required" placeholder="(required)" name="{{name}}" rows="3">{{default}}</textarea>
                {{else}}
                    <textarea class="body-textarea form-control required" placeholder="(required)" name="{{name}}" rows="3"></textarea>
                    <div class="editor_holder"></div>
                {{/if}}
            {{/if}}
        {{else}}
            {{#if isFile}}
                <label class="btn btn-secondary btn-sm required" for="my-file-selector">
                    <input type="file" style="display:none;" name="{{name}}">
                    Choose file
                </label>
            {{else}}
                {{#if default}}
                    <input class="parameter form-control required" minlength="1" name="{{name}}" placeholder="(required)" type="{{inputType}}" value="{{default}}" />
                {{else}}
                    <input class="parameter form-control required" minlength="1" name="{{name}}" placeholder="(required)" type="{{inputType}}" value="" />
                {{/if}}
            {{/if}}
        {{/if}}
        <div class="parameter-content-type"/>
        <div class="small-description media mt-2">
            {{#if type}}
                <small><pre class="mb-0 mr-2"><code class="code-signature hljs rounded">{{type}}</code></pre></small>
            {{/if}}
            <div class="media-body">
                <small class="text-muted">{{this.description}}</small>
            </div>
        </div>
    </div>
</div>